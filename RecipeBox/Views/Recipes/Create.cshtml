@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>

@using (Html.BeginForm())
{
  @Html.Label("Recipe title")
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
  @Html.LabelFor(model => model.Ingredients)
  @Html.TextAreaFor(model => model.Ingredients, new {@class ="form-control"})
  @Html.LabelFor(model => model.Instructions)
  @Html.TextAreaFor(model => model.Instructions, new {@class ="form-control"})
  @Html.Label("Select tag")
  @Html.DropDownList("TagId")
  
  <input type="submit" class="btn btn-default" value="Add a new recipe" />
}

<p>@Html.ActionLink("Back to your recipes", "Index", "Recipes")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>