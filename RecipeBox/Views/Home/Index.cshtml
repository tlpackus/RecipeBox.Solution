@{
  Layout = "_Layout";
}

@model List<RecipeBox.Models.Recipe>;

<h1>Welcome to the Recipe Box!</h1>

@using RecipeBox.Models;

<h1>All Recipes:</h1>

@if (@Model.Count == 0)
{
    <h3>No recipes have been added yet.</h3>
}

<ul>
    @foreach (Recipe recipe in Model)
    {
        <li>@Html.ActionLink($"{recipe.Name}", "Details", "Recipes", new { id = recipe.RecipeId})</li>
    }
</ul>

<p>@Html.ActionLink("Create an account with us", "Register", "Account")</p>
<p>@Html.ActionLink("Log into your existing account", "Login", "Account")</p>
<p>@Html.ActionLink("Add new Recipe", "Create", "Recipes")</p>
<p>@Html.ActionLink("Manage your recipes", "Index", "Recipes")</p>